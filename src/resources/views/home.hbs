<div class="mt-3">
    <div class="row">
        {{#each BlogNode}}
        <div class=" col-sm-3">
            <div class="card" style="margin-top: 20px">
                <a href="courses/{{this.slug}}">
                    <img class="card-img-top" src="https://i.ytimg.com/vi/{{this.videoID}}/hqdefault.jpg"
                        alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Xem ngay</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>